<Page x:Class="TesterUI.MVVM.VIews.Main.Pages.OpenAnswerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TesterUI.MVVM.VIews.Main.Pages"
      xmlns:pages="clr-namespace:TesterUI.MVVM.ViewModels.Main.Pages"
      mc:Ignorable="d"
      Title="OpenAnswerPage" Height="450" Width="800">
    
    <Page.DataContext>
        <pages:OpenAnswerPageViewModel/>
    </Page.DataContext>
    
    <Grid>
        <GroupBox Header="Выберите правильный ответ">
            <ListBox ItemsSource="{Binding OpenQuestion.Answers}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     Margin="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Answer}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</Page>
